{
  "name": "mistertoy-backend",
  "version": "1.0.0",
  "description": "Backend API server for the MisterToy application",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev:win": "set PORT=3030&nodemon --ignore \"./data\" server.js",
    "dev:mac": "export PORT=3030 && nodemon --ignore \"./data\" server.js",
    "server:dev": "nodemon --env-file=.env server.js",
    "server:prod": "set NODE_ENV=production&&node server.js",
    "start": "node server.js"
  },
  "keywords": [
    "mistertoy",
    "backend",
    "api",
    "nodejs",
    "express"
  ],
  "author": "Amir",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cryptr": "^6.2.0",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "follow-redirects": "^1.15.3",
    "mongodb": "^6.0.0",
    "mongoose": "^8.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
